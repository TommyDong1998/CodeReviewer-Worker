option_settings:
  # Instance type configuration - ARM-based Graviton3
  aws:ec2:instances:
    InstanceTypes: t4g.medium, t4g.large
    SupportedArchitectures: arm64

  # Root volume configuration
  aws:autoscaling:launchconfiguration:
    RootVolumeType: gp3
    RootVolumeSize: 30

  # Enhanced health reporting
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
    EnhancedHealthAuthEnabled: true

  # Auto Scaling health check configuration
  aws:autoscaling:asg:
    HealthCheckType: ELB
    HealthCheckGracePeriod: 180

  # Application load balancer health check path
  aws:elb:healthcheck:
    Interval: 30
    Timeout: 5
    HealthyThreshold: 3
    UnhealthyThreshold: 2
    Target: HTTP:8080/health
